<h1>Posts#new</h1>
  <%# 投稿フォーム %>
  <div class="row justify-content-md-center">
    <%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg", size:"100x100", class: "profile-image" %>
  </div>
  <div class="row justify-content-md-center">
   <div class="form-body">
      <%= form_with(model: @post, local: true) do |f| %>
          <%= f.text_area :post, rows: "8", class: "col form-control", placeholder: "なんか書いとけ" %>
          <%= f.attachment_field :post_image, placeholder: "画像" %>
          <%= f.submit "投稿", class: "btn btn-primary pull-right" %>
      <% end %>
    </div>
  </div>
  <%# ---------------- %>