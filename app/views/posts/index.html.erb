<div class="container">
  <h3><i class="fas fa-home mb-10"> ホーム</i></h3>
  <%# 投稿フォーム %>
  <div class="row post-form">
    <%= attachment_image_tag current_user, :profile_image, fallback: "no_image.jpg", size:"50x50", class: "profile-image" %>
    <div class="col">
      <%= form_with(model: @post, local: true) do |f| %>
          <%= f.text_area :post, rows: "3", class: "col form-control", placeholder: "なんか書いとけ" %>
          <%= f.attachment_field :post_image, placeholder: "画像" %>
          <%= f.submit "投稿", class: "btn btn-outline-success col-xs-12 mt-2" %>
      <% end %>
    </div>
  </div>
  <%# ---------- %>
  <%# 固定ボタン------ %>
  <button type="button" class="btn btn-success fixed_btn" data-toggle="modal" data-target="#exampleModal">
    <i class="far fa-paper-plane"></i>
  </button>
  <%# ---------------- %>

  <%# modal-form %>
  <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">新規投稿</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <%= form_with(model: @post) do |f| %>
          <div class="modal-body">
            <div class="form-group">
              <%= f.text_area :post, rows: "8", class: "form-control", placeholder: "なんか書いとけ" %>
            </div>
            <div class="form-group">
              <%= f.attachment_field :post_image, placeholder: "画像" %>
            </div>
          </div>
          <div class="modal-footer">
            <button button type="button" class="btn btn-secondary" data-dismiss="modal">閉じる</button>
            <%= f.submit "投稿する", class: "btn btn-success" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <%# ---------- %>
  <%# 非同期投稿 %>
  <div class="posts">
    <% render 'posts', posts: @posts %>
  </div>
  <%# ----------- %>
  <!--posts一覧 -->
  <% @posts.each do |post| %>
    <div class="post-content">
      <%= link_to post_path(post.id) do %>
        <div class="row">
            <div class="col-2">
              <%= attachment_image_tag post.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "50x50", class: "profile-image-mini" %>
            </div>
            <div class="col-7 post-name">
              <%= post.user.name %> Lv.<%= post.user.user_level %>
            </div>
            <div class="col-3 post-date">
              <%= post.created_at.strftime('%Y/%m/%d') %>
            </div>
        </div>

        <div class="row">
          <div class="col-2"></div>
          <div class="col-10">
            <div class="row post-text">
              <small><%= simple_format post.post %></small>
            </div>
            <div class="row post-image">
                <%= attachment_image_tag post, :post_image, format: 'jpeg', size: "420x280", class: "post-image" %>
            </div>
          </div>
        </div>
      <% end %>
      <%# --------------------------- %>
      <%# 投稿下部--------------------- %>
      <div class="row">
        <div class="col-2"></div>
        <div class="col">
          <ul class="list-group list-group-horizontal">
            <%# いいね %>
            <li class="list-group-item flex-fill" id="favorites_buttons_<%= post.id %>">
              <%= render partial: 'favorites/favorite', locals: { post: post} %>
            </li>
            <%# ------- %>
            <%# コメント %>
            <li class="list-group-item flex-fill">
              <%= link_to post_path(post.id) do %>
                <i class="far fa-comment-dots btn-outline-info"></i>
                <%= post.comments.count %>
              <% end %>
            </li>
            <%# -------- %>
            <%# 削除 %>
            <% if post.user == current_user %>
              <li class="list-group-item flex-fill">
                <%= link_to post_path(post), method: :delete, class: 'btn-sm btn-outline-danger' do %>
                  <i class="fas fa-trash-alt"></i>
                <% end %>
              </li>
            <% end %>
            <%# ---- %>
          </ul>
        </div>
      </div>
      <%# ---------------------------- %>
    </div>
  <% end %>
  <%# --------------------------- %>
  <div class="row justify-content-md-center bottom-area">
    <div class="col-9">
      <%= paginate @posts, theme: 'twitter-bootstrap-4' %>
    </div>
  </div>
</div>
