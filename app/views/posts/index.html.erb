<div class="container">
  <h1>Posts#index</h1>
  <%# 投稿 %>
  <%= form_with(model: @post, local: true) do |f| %>
    <div class="field row">
      <%= f.label :post %>
      <%= f.text_area :post, class: "col-xs-12 post_body" %>
    </div>
    <div class="item-image">
      <%= attachment_image_tag @post, :post, class:"img-square", fallback: "no_image.jpg", size:"200x160" %>
      <%= f.attachment_field :post_image, placeholder: "画像" %>
    </div>
    <div class="actions row">
      <%= f.submit "投稿", class: "btn btn-primary col-xs-12" %>
    </div>
  <% end %>
  <%= paginate @posts %>
  <%# ---------------- %>


  <!--posts一覧 -->
  <table class="table table-hover">
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.post %></td>
          <td><%= post.user.profile_image %></td>
          <td><%= post.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
  <%# コメント件数表示 %>
        <ul class="inline-meta">
          <li>By
            <%= post.user.name %>
          </li>
          <li>
            <%= link_to "#{post.comments.count} コメント", post_path(post.id) %>
          </li>
          <% if post.favorited_by?(current_user) %>
          <li>
            <%= link_to post_favorites_path(post), method: :delete do %>
              <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
              <%= post.favorites.count %> いいね
            <% end %>
          </li>
          <% else %>
          <li>
            <%= link_to post_favorites_path(post), method: :post do %>
              <i class="fa fa-heart-o" aria-hidden="true"></i>
              <%= post.favorites.count %> いいね
            <% end %>
          </li>
          <% end %>
        </ul>
      <% end %>

    </tbody>
  </table>
  <!---------------->
</div>