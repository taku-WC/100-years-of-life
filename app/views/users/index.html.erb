<div class="container">
  <h4><i class="fas fa-users mb-10"> メンバーズ</i></h4>
  <p id="notice"><%= notice %></p>
<%# 検索 %>
  <%= form_with(url: search_path, method: :get, local: true) do |f| %>
    <%= f.text_field :search %>
    <%= f.submit 'Search' %>
  <% end %>
<%# ---- %>
  <% @users.each do |user| %>
  <div class="list-group list-group-item profile-list">
    <%= link_to user_path(user.id) do %>
      <%= attachment_image_tag user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "50x50", class: "profile-image-mini"%>
      <%= user.name %> Lv.<%= user.user_level %>
    <% end %>
  </div>
  <% end %>
</div>