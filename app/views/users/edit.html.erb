<div class='container'>


	<h2>プロフィール編集</h2>

	<div class="form-body">

		<%= form_with(model: @user, local: true) do |f| %>
			<div class="form-group">
				<span class="fa fa-user form-control-icon" aria-hidden="true"></span>
				<%= f.label :name, "名前" %>
				<%= f.text_field :name, autofocus: true, placeholder:"名前", class: "form-control"%>
			</div>


			<div class="form-group"><!--profile_image-->
				<span class="fas fa-file-image" aria-hidden="true"></span>
				<%= f.label :profile_image, "プロフィール画像" %>
				<%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "form-control" %>
			</div>


			<div class="form-group"><!--profile-->
				<span class="fa fa-user form-control-icon" aria-hidden="true"></span>
				<%= f.label :profile, "プロフィール" %>
				<%= f.text_area :profile, rows: "5", class: "form-control" %>
			</div>


			<%= f.submit "編集", class: "btn btn-outline-success" %>
		<% end %>
	</div>
</div>
