<h1>mypage Users#show</h1>
<h3 class="profile-name"><%= @user.name %></h3>
<%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "100x100", class: "img-circle pull-left profile-img" %>
<% if @user.id == current_user.id %>
  <p><%= link_to "プロフィール編集", edit_user_path(@user), class: "pull-right" %></p>
<% end %>


<% @post.each do |post| %>
  <%= link_to post_path(post.id) do %>
    <%= attachment_image_tag post, :post_image %>
  <% end %>
  <%= paginate @post %>


<%= attachment_image_tag post.user, :profile_image, fallback: "no_image.jpg", size: "100x100", class: "img-circle pull-left profile-thumb" %>
<h3 class="block-title">
    <%= link_to post_path(post.id) do %>
      <i class="fa fa-map-marker"></i><%= post.user.name %>
    <% end %>
</h3>
<ul class="inline-meta">
  <li>By
    <%= post.user.name %>
  </li>
  <li>
    <i class="fa fa-calendar"></i><%= post.created_at.strftime('%Y/%m/%d') %>
  </li>
  <li>
    <%= link_to "#{post.comments.count} コメント", post_path(post.id) %>
  </li>
  <% if post.favorited_by?(current_user) %>
  <li>
    <%= link_to post_favorites_path(post), method: :delete do %>
      <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
      <%= post.favorites.count %> いいね
    <% end %>
  </li>
  <% else %>
  <li>
    <%= link_to post_favorites_path(post), method: :post do %>
      <i class="fa fa-heart-o" aria-hidden="true"></i>
      <%= post.favorites.count %> いいね
    <% end %>
  </li>
  <% end %>
  <li>
    <%= link_to "削除", post_path(post), method: :delete %>
  </li>
</ul>
<% end %>