<!DOCTYPE html>
<html>
  <head>
    <title>Life</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
<div class="container">
  <div class="row">
  <%# ---------- %>
    <div class="col-3 sidebar">
      <div class="sidebar">
        <div class="navbar-brand">
          <%= link_to image_tag("logo.jpg"), root_path %>
        </div>
        <ul class="nav flex-column nav-pills nav-fill mr-auto">
          <% if user_signed_in? %>
            <li class="nav-item btn btn-light">
              <%= link_to posts_path, class:"nav-item nav-link" do %>
                <i class="fas fa-home"> ホーム</i>
              <% end %>
            </li>
            <li class="nav-item btn btn-light">
              <%= link_to user_path(current_user.id), class:"nav-item nav-link" do %>
                <i class="fas fa-user"> プロフィール</i>
              <% end %>
            </li>
            <li class="nav-item btn btn-light active">
              <%= link_to new_post_path, class:"nav-item nav-link" do %>
               <i class="fas fa-comment-alt"> 投稿</i>
              <% end %>
            </li>
            <li class="nav-item btn btn-light">
              <%= link_to destroy_user_session_path, class:"nav-item nav-link", method: :delete do %>
                <i class="fas fa-sign-out-alt">ログアウト</i>
              <% end %>
            </li>
          <% else %>
            <li class="nav-item btn btn-light">
              <%= link_to "新規登録", new_user_registration_path, class:"nav-item nav-link" %>
            </li>
            <li class="nav-item btn btn-light">
              <%= link_to "ログイン", new_user_session_path, class:"nav-item nav-link" %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  <%# --------- %>
    <div class="col-9">
      <body>
          <%= yield %>
      </body>
    </div>
  </div>
</div>
</html>
